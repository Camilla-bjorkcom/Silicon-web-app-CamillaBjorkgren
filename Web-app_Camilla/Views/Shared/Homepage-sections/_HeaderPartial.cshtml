
@inject SignInManager<UserEntity> _signInManager

<header>
    <div class="container">
        <a id="logo" asp-controller="home" asp-action="index"><img src="~/images/logo/silicon-logo.svg" alt="Logotype for Silicon"></a>

        <div id="menu" class="hide">
            <nav>
                <a class="menu-link" asp-controller="home" asp-action="index" asp-fragment="overview">Overview</a>
                <a class="menu-link" asp-controller="home" asp-action="index" asp-fragment="features">Features</a>
               @if (_signInManager.IsSignedIn(User))
                {
                    <a class="menu-link" asp-controller="Courses" asp-action="index" asp-fragment="features">Courses</a>
                }
              
                
                <a class="menu-link" asp-controller="Contact" asp-action="index">Contact</a>
            </nav>
        </div>

        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                <div class="slider round"></div>
            </label>
            <label>Dark</label>
        </div>

        <div class="account-buttons hide">
           @if (_signInManager.IsSignedIn(User))
            {
                <a class="btn-theme" asp-controller="Account" asp-action="Index"><i class="fa-light fa-user"></i>My Account</a>
                <a class="btn-gray" asp-controller="Auth" asp-action="SignOut"><i class="fa-regular fa-arrow-right-from-bracket"></i>Sign out</a>    
            }
            else
            {
                <a class="btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-regular fa-arrow-right-to-bracket"></i>Sign in</a>
                <a class="btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-light fa-user"></i>Sign up</a>
            }         
        </div>

        <button onclick="toggleMenu()" class="btn-mobile">
            <i class="fa-regular fa-bars"></i>
           </button>
    </div>
</header>

