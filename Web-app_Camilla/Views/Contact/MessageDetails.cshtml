@model ContactFormModel
@{
    ViewData["Title"] = "Message details";
}

<section class="messages">
    <div class="container">
        <div class="message-list">
            <div class="message-content">
                <div class="content">
                    <h2 class="message-author">From @Model.FullName</h2>
                    <div class="service-option">@Model.ServiceOption</div>
                    <hr />
                    <div class="message"><p class="text">@Model.Message</p></div>
                    <div class="email">@Model.Email</div>
                </div>
            </div>
        </div>
    </div>
</section>