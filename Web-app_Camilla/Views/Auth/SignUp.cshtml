@model SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}
@*
    https://youtu.be/IttJNH0vLJs?t=1704
https://youtu.be/mhe49sLUb78?t=3970 *@

<section class="sign-up">
    <div class="container">
        <div class="title">
            <h1>Create Account</h1>
            <p>Already have an account? <a asp-controller="auth" asp-action="SignIn">Sign in here.</a></p>
        </div>

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="errormessage">
                @ViewData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-controller="Auth" asp-action="SignUp" novalidate>
            <div class="name">
                <div class="first-name">
                    <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">First name</label>

                        <span asp-validation-for="FirstName"></span>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                </div>
                <div class="last-name">
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Last name</label>                                  
                        <span asp-validation-for="LastName"></span>
                        <input asp-for="LastName" class="form-control" />                    
                    </div>
                </div>
            </div>


            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <span asp-validation-for="Email"></span>
                <input asp-for="Email" class="form-control type="email" />
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <span asp-validation-for="Password"></span>
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword"></span>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
            </div>
            <div class="mb-3 form-check">
                <input asp-for="TermsAndConditions" type="checkbox" class="form-check-input" />
                <label asp-for="TermsAndConditions" class="form-check-label">I agree to the <a asp-controller="About" asp-action="Terms">Terms & Conditions</a> </label>   
            </div>
            <button type="submit" class="btn-theme-s">Sign Up</button>
        </form>
    </div>
</section>

@await Html.PartialAsync("_ValidationScriptsPartial")

