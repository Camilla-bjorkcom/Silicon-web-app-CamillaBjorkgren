
@model AccountDetailsViewModel 
@{
    ViewData["Title"] = $"{Model.User.FirstName} {Model.User.LastName}";
}

<section class="account-details">
    <div class="container">
        <div class="user">
            <div class="user-img">
                <img src="" alt="@($"{Model.User.FirstName} {Model.User.LastName}")">
            </div>
            <h6 class="name">@($"{Model.User.FirstName} {Model.User.LastName}")</h6>
            <p class="email">@Model.User.Email</p>
            <div class="btn-user">
                <a asp-controller="Account" asp-action="Details"><button class="button btn-theme"><i class="fa-light fa-gear"></i> Account Details</button></a>
                <a asp-controller="Auth" asp-action="signout" class="signout"><i class="fa-light fa-right-from-bracket"></i> Sign Out</a>
            </div>
        </div>

        <div class="details-form">
            <h2 class="title">Account Details</h2>
            <h6>Basic info</h6>
            <form class="form-basicinfo" method="post" asp-controller="Account" asp-action="Basicinfo">
                <div class="name">
                    <div class="first-name">
                        <label asp-for="User.FirstName" class="form-label">First name</label>
                        <div class="mb-3">
                            <input asp-for="User.FirstName" type="text" class="form-control" id="firstName" placeholder="John">
                        </div>
                    </div>
                    <div class="last-name">
                        <label asp-for="User.LastName" class="form-label">Last name</label>
                        <input asp-for="User.LastName" type="text" class="form-control" id="lastName" placeholder="Doe">
                    </div>
                </div>
                <div class="contact-info">
                    <div class="email">
                        <label asp-for="User.Email" class="form-label">Email address</label>
                        <div class="mb-3">
                            <input asp-for="User.Email" type="text" class="form-control" id="email" placeholder="john.doe@domain.com">
                        </div>
                    </div>
                    <div class="phone">
                        <label asp-for="User.PhoneNumber" class="form-label">Phone</label>
                        <input asp-for="User.PhoneNumber" type="text" class="form-control" id="phone" placeholder="Enter your phone">
                    </div>
                </div>
                <div class="bio">
                    <label asp-for="User.Bio" class="form-label">Bio <div class="optional">(optional) </div></label>
                    <textarea asp-for="User.Bio" type="text" class="form-control" id="bio" placeholder="Add a short bio..."></textarea>
                </div>
                <div class="buttons">
                    <a><button type="reset" class="button btn-gray">Cancel</button></a>
                    <a><button type="submit" class="button btn-theme">Save changes</button></a>
                </div>
            </form>
            <hr>
